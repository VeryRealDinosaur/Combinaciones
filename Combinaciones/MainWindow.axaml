<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Combinaciones.MainWindow"
        Title="Combinaciones">
        
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Grid.Row="0" Content="Bienvenido" FontSize="32" HorizontalAlignment="Center" Margin="10"/>
                <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto">
                        <TextBox Grid.Column="0" Watermark="Ingresa n1" Margin="5" Width="120" x:Name="N1Box"/>
                        <TextBox Grid.Column="1" Watermark="Ingresa n2" Margin="5" Width="120" x:Name="N2Box"/>
                </Grid>
                <Button Grid.Row="3" Content="Calcular" Margin="5" Width="250" x:Name="ActionButton" Click="ActionButton_OnClick"/>
                <Label Grid.Row="4" x:Name="ResultLabel"/>
        </Grid>
</Window>
